<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:background="#000"
    >

    <TableRow>

        <EditText
            android:id="@+id/edtDuLieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:textSize="30dp"
            android:textColor="#fff"
            android:text="0"
            android:editable="false"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:paddingTop="60dp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@null"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:layout_span="3"
            android:background="@drawable/change_background_control"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:text="delete"
            android:textColor="#fff"
            android:background="@drawable/change_background_control"
            android:textSize="14dp"
            android:layout_margin="2dp"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn7"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="7"
            android:textSize="30dp"
            android:background="@drawable/change_background"
            android:textColor="#fff"
            android:padding="20dp"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="8"
            android:textSize="30dp"
            android:textColor="#fff"
            android:padding="20dp"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="9"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnChia"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="/"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background_control"
            android:layout_margin="2dp"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="4"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="5"
            android:textSize="30dp"
            android:textColor="#fff"
            android:padding="20dp"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="6"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnNhan"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="x"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background_control"
            android:layout_margin="2dp"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="1"
            android:textSize="30dp"
            android:textColor="#fff"
            android:padding="20dp"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="2"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="3"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnTru"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="-"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background_control"
            android:layout_margin="2dp"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnCham"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="."
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btn0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="0"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnBang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="="
            android:textColor="#fff"
            android:background="@drawable/change_background_control"
            android:layout_margin="2dp"
            android:textSize="30dp" />
        <Button
            android:id="@+id/btnCong"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="+"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="#fff"
            android:background="@drawable/change_background_control"
            android:layout_margin="2dp"
            />
    </TableRow>

</TableLayout>